<!DOCTYPE html>
<html lang="en">
<head>
<%- include('./partials/head') %>

<style>
    html,body{
        font-family:Georgia, 'Times New Roman', Times, serif;
        font-size: 15px;
    }

    .navigation{
        font-size: 20px;
        color: rgb(31, 240, 240);
        margin-top: 10px;
    }


.separate-blogs{
    display: flex;
    column-gap: 30px;
    margin : 30px 30px;
    flex-wrap: wrap;
    row-gap: 30px;
    justify-content: space-around;
}

.box{
    border: 2px rgb(198, 190, 190) solid;
    display: flex;
    flex-direction: column;
    width: 300px;
    padding: 2px 2px;
    border-radius: 10px;
    color: black;
    height: fit-content;


}
.max{
   flex: 1 1 1 1;
}

.cover {
    height: 250px;
}
.title {
    border: 1px black solid;
    padding: 1px 1px;
    text-align: center;
    height: 30px;
    width: auto;
    align-content: center;
    font-size: 20px;
    margin-top: 1px;
}
.button{
    background-color: rgb(98, 98, 215);
    color: rgb(255, 255, 254);
    text-align: center;
    height: 40px;
    font-size: 20px;
    text-decoration: none;
    padding:1px 3px;
}

.user-profile{
    display: flex;
    flex-direction: row;
    row-gap: 5px;
}

</style>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
</head>
<body>
    <div class="bg-body-tertiary navigation">
        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
          <li class="nav-item" role="presentation">
              <a class="nav-link " href="/">Home</a>
          </li>
          <% if (locals.user && user) { %>
            <li class="nav-item" role="presentation">
        <a class="nav-link" id="pills-profile-tab"  href="/blog/add">Add Blog</a>
        
            </li>
            <li class="nav-item" role="presentation">
        <a class="nav-link" id="pills-profile-tab" href="/u/profile">Profile</a>
        
            </li>
          <% } else { %>
            <li class="nav-item" role="presentation">
            <a class="nav-link"  href="/signin">Login</a>
            </li>
      
            <li class="nav-item" role="presentation">
              <a class="nav-link" href="/signup">Create Account</a>
              </li>
            <% }%>
          
      
      <% if (locals.user && user) { %>

        <li class="nav-item" role="presentation">
            <a class="nav-link text-yellow" href="/blog/user">Your Blogs</a>
         </li>
        <li class="nav-item" role="presentation">
          <a class="nav-link" href="/logout">Logout</a>
          </li>

       
      <% } %>
      
        </ul>
       
      
      
      

    <% if (locals.indiBlogs) { %>
        <div class="separate-blogs">
           <% indiBlogs.forEach(blog => { %>
            <div class=" max box">
                <div class=" user-profile">
                    <img src="<%= blog.createdBy.profilePhotoUrl %>" width="30px">
                   <span style="font-size: 25px; margin-left: 5px;"> <%= blog.createdBy.fullName %> </span> 
                </div>
                <img class=" cover" src="<%= blog.coverURL %>" width="290px">
                <h3 class="  title"><%= blog.title %></h3>
                <a class=" button" href="/blog/view/<%= blog._id %>">View</a>
            </div>
           <% }) %>
        </div>
        <% } %>


   
</body>

<%- include('./partials/script') %>
</html>